// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT
  STYLIST
  ADMIN
  MODERATOR
}

enum PostStatus {
  OPEN
  CLOSED
  REMOVED
  RESOLVED
}

enum BookingStatus {
  PENDING
  APPROVED
  COMPLETED
  CANCELED
  CANCELLED_BY_CLIENT
  CANCELLED_BY_TECH
}

enum ContactPreference {
  BOOKINGS_ONLY
  CALL_OR_TEXT
  SOCIAL_DM
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  PAST_DUE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(CLIENT)
  displayName String?
  themePreference String @default("light")
  mutedUntil DateTime?
  profileImage String?
  createdAt DateTime @default(now())
  
  // Relations
  mentionsReceived Comment[] @relation("UserMentions")
  stylistProfile StylistProfile?
  clientBookings Booking[] @relation("ClientBookings")
  
  // New: Link to StylistClient records (where this User is the "matched" client)
  matchedClientRecords StylistClient[]

  conversations  Conversation[]
  
  // Forum & Safety
  forumPosts      ForumPost[]
  comments        Comment[]
  likes           Like[]
  postViews       PostView[]
  reportsFiled    Report[]      @relation("Reporter")
  reportsReceived Report[]      @relation("UserReports")

  notificationsReceived Notification[] @relation("NotificationsReceived")
  notificationsSent     Notification[] @relation("NotificationsSent")

  // Social
  bio           String?
  location      String?
  
  sentConnections     Connection[] @relation("ConnectionSender")
  receivedConnections Connection[] @relation("ConnectionReceiver")
  
  blocksBlocked       Block[]      @relation("Blocker")
  blocksReceived      Block[]      @relation("Blocked")
  
  conversationsAsP1   Conversation[] @relation("ConsParticipant1")
  conversationsAsP2   Conversation[] @relation("ConsParticipant2")
}

model Connection {
  id          String   @id @default(uuid())
  requesterId String
  requester   User     @relation("ConnectionSender", fields: [requesterId], references: [id])
  addresseeId String
  addressee   User     @relation("ConnectionReceiver", fields: [addresseeId], references: [id])
  status      String   @default("PENDING") // PENDING, ACCEPTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([requesterId, addresseeId])
}

model Block {
  id        String   @id @default(uuid())
  blockerId String
  blocker   User     @relation("Blocker", fields: [blockerId], references: [id])
  blockedId String
  blocked   User     @relation("Blocked", fields: [blockedId], references: [id])
  createdAt DateTime @default(now())

  @@unique([blockerId, blockedId])
}

model StylistProfile {
  id               String   @id @default(uuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id])
  
  businessName     String
  storefrontHandle String?  @unique // Simplified URL handle
  bio              String?
  locationType     String   // 'HOME', 'SALON', 'MOBILE'
  profileImage     String?
  bannerImage      String?
  specialties      String[] @default(["hair"])
  
  // Contact Info
  phoneNumber      String?
  instagramHandle  String?
  tiktokHandle     String?
  websiteUrl       String?
  contactPreference ContactPreference @default(BOOKINGS_ONLY)
  
  stripeCustomerId String?
  subscriptionStatus SubscriptionStatus @default(INACTIVE)
  
  services         Service[]
  stylistBookings  Booking[] @relation("StylistBookings")
  
  // New: Stylist's Client Rolodex
  clients          StylistClient[]

  conversations    Conversation[]
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  portfolioImages  PortfolioImage[]
  subscription     ProfessionalSubscription?
  
  availabilitySchedule AvailabilitySchedule[]
  availabilityExceptions AvailabilityException[]
  
  registrationIpHash String? 
}

model TrialUsage {
  id        String   @id @default(uuid())
  ipHash    String   @unique
  email     String?
  createdAt DateTime @default(now())
}

model PortfolioImage {
  id        String   @id @default(uuid())
  stylistId String
  stylist   StylistProfile @relation(fields: [stylistId], references: [id])
  imageUrl  String
  createdAt DateTime @default(now())
}

model Service {
  id          String   @id @default(uuid())
  stylistId   String
  stylist     StylistProfile @relation(fields: [stylistId], references: [id])
  
  name        String
  price       Decimal
  duration    Int      // in minutes
  category    String   @default("hair") // 'hair', 'nails'
  deposit     Decimal  @default(0.0)
  
  bookings    Booking[]
}

model Booking {
  id          String   @id @default(uuid())
  
  // Modified: clientId is now optional (for external/manual bookings)
  clientId    String?
  client      User?     @relation("ClientBookings", fields: [clientId], references: [id])
  
  // New: Relation to StylistClient (for manual/imported bookings)
  stylistClientId String?
  stylistClient   StylistClient? @relation(fields: [stylistClientId], references: [id])
  
  stylistId   String
  stylist     StylistProfile @relation("StylistBookings", fields: [stylistId], references: [id])
  
  serviceId   String?
  service     Service? @relation(fields: [serviceId], references: [id])
  
  appointmentDate DateTime
  duration    Int?      // Duration in minutes (overrides service duration)
  status      BookingStatus @default(PENDING)
  notes       String?
  
  // New: Calendar & Import Fields
  isBlockout   Boolean @default(false)
  importSource String? // 'MANUAL', 'BOOKSY', 'STYLESEAT', 'CSV'
  importId     String?
  
  cancellationReason String?
  cancelledAt        DateTime?
  cancelledBy        String? // User ID of who cancelled
  
  reviews     Review[]
  conversation Conversation?
  notifications Notification[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt @default(now())
}

// NEW MODEL: Client Rolodex
model StylistClient {
  id        String   @id @default(uuid())
  stylistId String
  stylist   StylistProfile @relation(fields: [stylistId], references: [id])
  
  userId    String?  // Optional: Linked CrownSide User
  user      User?    @relation(fields: [userId], references: [id])

  name      String
  email     String?
  phone     String?
  notes     String?
  
  importSource String @default("MANUAL") // MANUAL, BOOKSY, STYLESEAT, CSV, CROWNSIDE
  importId     String? // External ID

  bookings  Booking[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([stylistId])
  @@index([email])
  @@index([phone])
}

model Review {
  id          String   @id @default(uuid())
  bookingId   String
  booking     Booking  @relation(fields: [bookingId], references: [id])
  
  rating      Int
  comment     String?
  reply       String?
  
  createdAt   DateTime @default(now())
}

model PageHero {
  id              String   @id @default(uuid())
  pageKey         String   @unique
  desktopImageUrl String?
  mobileImageUrl  String?
  enabled         Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model SubscriptionPlan {
  id             String   @id @default(uuid())
  key            String   @unique // "pro", "elite"
  name           String
  price          Decimal
  description    String?
  freeTrialDays  Int      @default(30)
  freeSlotsLimit Int      @default(30)
  active         Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  subscriptions  ProfessionalSubscription[]
}

enum SubStatus {
  TRIAL
  ACTIVE
  CANCELED
  EXPIRED
  PAST_DUE
}

model ProfessionalSubscription {
  id                   String    @id @default(uuid())
  stylistId            String    @unique
  stylist              StylistProfile @relation(fields: [stylistId], references: [id])
  
  planKey              String
  plan                 SubscriptionPlan @relation(fields: [planKey], references: [key])
  status               SubStatus @default(TRIAL)
  
  trialEndsAt          DateTime?
  billingStartsAt      DateTime?
  
  stripeCustomerId     String?
  stripeSubscriptionId String?
  
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model Conversation {
  id           String    @id @default(uuid())
  
  // Booking Context (Optional)
  bookingId    String?    @unique
  booking      Booking?   @relation(fields: [bookingId], references: [id])
  
  // Legacy/Booking Specific Fields (Optional)
  clientId     String?
  client       User?      @relation(fields: [clientId], references: [id]) 
  stylistId    String?
  stylist      StylistProfile? @relation(fields: [stylistId], references: [id])
  
  // Generic Participants (User IDs)
  participant1Id String?
  participant1   User?   @relation("ConsParticipant1", fields: [participant1Id], references: [id])
  participant2Id String?
  participant2   User?   @relation("ConsParticipant2", fields: [participant2Id], references: [id])
  
  messages     Message[]
  notifications Notification[]
  
  lastMessageAt DateTime @default(now())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([clientId])
  @@index([stylistId])
  @@index([participant1Id])
  @@index([participant2Id])
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  
  senderId       String       // User ID of sender
  content        String
  
  readAt         DateTime?
  createdAt      DateTime     @default(now())

  @@index([conversationId])
}

// --- FORUM SYSTEM ---

enum ForumBoardType {
  FIND_PRO
  FIND_CLIENT
  SALON_TALK
  HELP_FEEDBACK
  ANNOUNCEMENTS
}

model ForumPost {
  id          String         @id @default(uuid())
  authorId    String
  author      User           @relation(fields: [authorId], references: [id])
  
  board       ForumBoardType
  type        String         // "HAIR", "NAILS", "BRAIDS", etc.
  title       String
  content     Json           // Structured data: budget, location, availability, etc.
  
  status      PostStatus     @default(OPEN)
  isLocked    Boolean        @default(false)
  
  moderatedBy      String?
  moderationReason String?
  moderatedAt      DateTime?

  viewCount   Int            @default(0)
  
  images      ForumImage[]
  comments    Comment[]
  likes       Like[]
  reports     Report[]       @relation("PostReports")
  postViews   PostView[]
  
  notifications Notification[]
  
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([board])
  @@index([type])
  @@index([authorId])
}

model ForumImage {
  id        String    @id @default(uuid())
  postId    String
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  url       String
  createdAt DateTime  @default(now())
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  postId    String
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  parentId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")
  
  depth          Int       @default(0)
  
  mentionedUserId String?
  mentionedUser   User?    @relation("UserMentions", fields: [mentionedUserId], references: [id])
  
  isRemoved      Boolean   @default(false)
  removedBy      String?
  removedReason  String?
  removedAt      DateTime?

  likes     Like[]
  reports   Report[]  @relation("CommentReports")
  
  notifications Notification[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([postId])
  @@index([authorId])
}

model Like {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  postId    String?
  post      ForumPost? @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  commentId String?
  comment   Comment?   @relation(fields: [commentId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([userId, postId])
  @@unique([userId, commentId])
}


model PostView {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  postId    String
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  viewedAt  DateTime  @default(now())

  @@unique([userId, postId])
}

enum ReportTargetType {
  POST
  USER
  COMMENT
}

enum ReportStatus {
  PENDING
  RESOLVED
  DISMISSED
}

model Report {
  id          String           @id @default(uuid())
  reporterId  String
  reporter    User             @relation("Reporter", fields: [reporterId], references: [id])
  
  targetType  ReportTargetType
  
  forumPostId String?
  forumPost   ForumPost?       @relation("PostReports", fields: [forumPostId], references: [id])
  
  commentId   String?
  comment     Comment?         @relation("CommentReports", fields: [commentId], references: [id])
  
  targetUserId String?
  targetUser   User?           @relation("UserReports", fields: [targetUserId], references: [id])
  
  reason      String
  status      ReportStatus     @default(PENDING)
  notes       String?          // Admin notes
  
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

enum NotificationType {
  REPLY
  MENTION
  NEW_COMMENT
  LIKE_POST
  LIKE_COMMENT
  NEW_BOOKING
  BOOKING_UPDATE
  NEW_MESSAGE
  CONNECTION_REQUEST
  CONNECTION_ACCEPTED
}

model Notification {
  id        String           @id @default(uuid())
  userId    String           // Recipient
  user      User             @relation("NotificationsReceived", fields: [userId], references: [id])
  
  senderId  String           // Actor who triggered it
  sender    User             @relation("NotificationsSent", fields: [senderId], references: [id])
  
  type      NotificationType
  
  postId    String?
  post      ForumPost?       @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  commentId String?
  comment   Comment?         @relation(fields: [commentId], references: [id], onDelete: Cascade)

  bookingId String?
  booking   Booking?         @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  conversationId String?
  conversation   Conversation? @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([userId])
}

// --- AVAILABILITY SYSTEM ---

model AvailabilitySchedule {
  id           String         @id @default(uuid())
  stylistId    String
  stylist      StylistProfile @relation(fields: [stylistId], references: [id])
  
  dayOfWeek    Int            // 0=Sun, 1=Mon, ..., 6=Sat
  startTime    String         @default("09:00") // HH:mm format (24h)
  endTime      String         @default("17:00") // HH:mm format (24h)
  isWorkingDay Boolean        @default(true)
  
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@unique([stylistId, dayOfWeek])
}

model AvailabilityException {
  id           String         @id @default(uuid())
  stylistId    String
  stylist      StylistProfile @relation(fields: [stylistId], references: [id])
  
  date         DateTime       // The specific date (midnight UTC or local)
  isOff        Boolean        @default(false) // Entire day off?
  
  // Optional override hours if not fully off
  startTime    String?        // HH:mm
  endTime      String?        // HH:mm
  
  reason       String?        // "Vacation", "Doctor", etc.
  
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([stylistId])
  @@index([date])
}
